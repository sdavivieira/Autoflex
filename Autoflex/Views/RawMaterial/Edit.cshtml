@model Autoflex.Models.RawMaterials.RawMaterial

<h2>Editar Matéria-prima</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StockQuantity">Quantidade em Estoque</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Voltar</a>
</form>
@await Html.PartialAsync("_ErrorModal")