@model IEnumerable<Autoflex.Models.RawMaterials.RawMaterial>

<h2>Matérias-primas</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Nova Matéria-prima</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-sm btn-danger">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_ErrorModal")


